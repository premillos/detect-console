{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "alwaysStrict": false,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "ES2015",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop":true,
    "moduleResolution":"Node",
    "types": ["node"],
    "target": "ES2015",
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "dom"]
  },
  "include": ["detect-console.ts"]
}